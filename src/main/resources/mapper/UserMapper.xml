<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.chat_server.mapper.UserMapper">

    <resultMap id="UserMap" type="com.example.chat_server.entity.User">
        <id property="id" column="user_id"/>
        <result property="memberId" column="member_id"/>
        <result property="deptId" column="dept_id"/>
        <result property="username" column="username"/>
        <result property="password" column="password_hash"/>
        <result property="role" column="role"/>
    </resultMap>

    <select id="findByUsername" resultMap="UserMap">
        SELECT user_id, member_id, dept_id, username, password_hash, role
        FROM auth_user
        WHERE username = #{username}
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO auth_user (member_id, dept_id, username, password_hash, role)
        VALUES (#{memberId}, #{deptId}, #{username}, #{password}, #{role})
    </insert>

</mapper>
